<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_500">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/result_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="570dp"
        android:background="@drawable/round_corner"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.614">


        <TextView
            android:id="@+id/employer_name"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:fontFamily="@font/noto_sans_medium"
            android:gravity="center"
            android:rotationX="0"
            android:text="회사이름"
            android:textColor="@color/black"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="90dp" />

        <View
            android:layout_width="340dp"
            android:layout_height="4px"
            android:layout_marginTop="25dp"
            android:background="#4C4B4B"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/employer_name">

        </View>

        <TextView
            android:id="@+id/contract_type"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:fontFamily="@font/noto_sans_bold"
            android:gravity="left"
            android:text="계약서 종류"
            android:textColor="@color/black"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/employer_name"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/contract_reason"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/noto_sans_regualr"
            android:gravity="left"
            android:text="계약서 판별 이유"
            android:textColor="#303030"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/contract_type"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/lead_chatbot"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans_bold"
            android:gravity="left"
            android:text="궁금한 점이 있다면? 챗봇에게 질문하기"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraint_toBottomOf="@android:result_linear_layout"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="462dp" />

        <Button
            android:id="@+id/ask_chatbot"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:textColor="#ffffff"
            android:text="챗봇질문하기"
            android:background="@drawable/btn_chatbot"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lead_chatbot" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:src="@mipmap/ic_rule"
        app:layout_constraintBottom_toTopOf="@id/result_linear_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/result_linear_layout"
        app:layout_constraintVertical_bias="0.705" />

</androidx.constraintlayout.widget.ConstraintLayout>